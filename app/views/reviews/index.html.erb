<h1>Listing reviews</h1>

<table>
  <tr>
    <th>Review</th>
    <th>Stars</th>
    <th>Date</th>
    <th>Text</th>
    <th>Business</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reviews.each do |review| %>
  <tr>
    <td><%= review.review_id %></td>
    <td><%= review.stars %></td>
    <td><%= review.date %></td>
    <td><%= review.text %></td>
    <td><%= review.business_id %></td>
    <td><%= link_to 'Show', review %></td>
    <td><%= link_to 'Edit', edit_review_path(review) %></td>
    <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

